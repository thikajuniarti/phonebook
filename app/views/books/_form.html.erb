<%= form_for @book, remote: true, html: { style: "display:inline;" } do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@book.errors.count, "error") %> prohibited
        this data from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="modal-body">
      <div class="form-group">
        <p>
          <%= f.label :Name %><br>
          <%= f.text_field :name, placeholder: "Enter name *", class: "form-control"%>
        </p>
      </div>

      <div class="form-group">
        <p>
          <%= f.label :Address %><br>
          <%= f.text_area :address, placeholder: "Enter address", class: "form-control" %>
        </p>
      </div>

      <div class="form-group">
        <p>
          <%= f.label :Number %><br>
          <%= f.text_field :number, placeholder: "Enter number *", class: "form-control" %>
        </p>
      </div>

      <div class="form-group">
        <p>
          <%= f.label :Email %><br>
          <%= f.text_field :email, placeholder: "Enter email", class: "form-control" %>
        </p>
      </div>
  </div>

  <div class="modal-footer">
    <p>
      <%= f.hidden_field :user_id, :value => current_user.id %>
    </p>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
